use std;

effect Abort {
    abort() a
}
# ----
let hAbort = fn(default) {
    handler {
        return(x) { x }
        abort() { default }
    }
};

let safe_div = fn(x, y) <Abort> Int {
    if eq(y, 0) {
        abort()
    } else {
        div(x, y)
    }
};

let main = add(
    handle[hAbort(0)] safe_div(3, 0),
    handle[hAbort(0)] safe_div(10, 2),
);
